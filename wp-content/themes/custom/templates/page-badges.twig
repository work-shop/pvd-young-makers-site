{% extends "page.twig" %}

{% block page_content %}
  {% embed "partials/section.twig" %}
		{% block title %}
      Pathways Badges
    {% endblock %}

    {% block text %}
      {{ post.get_field("pathways_badge_overview") }}
    {% endblock %}

    {% block extra %}
      {% include "partials/list-of-badges.twig" with { badges: pathways_badges } only %}
    {% endblock %}
  {% endembed %}

  {% embed "partials/section.twig" %}
		{% block title %}
      Machine Badges
    {% endblock %}

    {% block text %}
      {{ post.get_field("machine_badges_overview") }}
    {% endblock %}

    {% block extra %}
      {% include "partials/list-of-badges-mini.twig" with { badges: machine_badges } only %}
    {% endblock %}
  {% endembed %}
{% endblock %}
