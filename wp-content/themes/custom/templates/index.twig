{% extends "page.twig" %}

{% block page_content %}
	{% embed "partials/section.twig" %}
		{% block extra %}
			<nav>
				<div class="mb-4">
					<ul class="flex flex-wrap -m-2">
						{% for post in posts %}
							<li class="w-full md:flex-1 m-2">
								{% include ["partials/teaser-" ~ post.post_type ~ ".twig", "partials/teaser.twig"] %}
							</li>
						{% endfor %}
					</ul>
				</div>
			</nav>
		{% endblock %}
	{% endembed %}
{% endblock %}
