<a class="group block max-w-md border-1 border-teal-darkest bg-teal-lightest hover:border-orange hover:bg-orange-lightest no-underline" href="{{ link }}">
  <span class="block px-3 py-1 border-b-1 border-teal-darkest bg-teal-darkest text-white font-bold text-2xl group-hover:border-orange group-hover:bg-orange">{% spaceless %}
    {{ title }}
  {% endspaceless %}</span><br class="hidden">

  <span class="flex items-center px-3 py-2 small-caps border-b-1 border-teal-darkest group-hover:border-orange">{% spaceless %}
    {% if primary_pictogram %}
      <span class="mr-2 group-hover:text-orange" data-pictogram="{{ primary_pictogram }}"></span>
    {% endif %}

    <span class="group-hover:text-orange">{{ primary_text }}</span>
  {% endspaceless %}</span><br class="hidden">

  <span class="flex items-center px-3 py-2 small-caps">{% spaceless %}
    {% if secondary_pictogram %}
      <span class="mr-2 group-hover:text-orange" data-pictogram="{{ secondary_pictogram }}"></span>
    {% endif %}

    <span class="group-hover:text-orange">{{ secondary_text }}</span>
  {% endspaceless %}</span><br class="hidden">

  {% if image_src %}
    <img class="block w-full object-cover border-t-1 border-teal-darkest group-hover:border-orange" src="{{ image_src }}" height="320" alt="">
  {% endif %}
</a>
