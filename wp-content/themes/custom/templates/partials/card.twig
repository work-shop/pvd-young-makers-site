    <div class="px-3 py-2 small-caps border-b-2 border-teal-darkest group-hover:border-orange">{{ primary_text }}</div>

    <div class="px-3 py-2 small-caps border-b-2 border-teal-darkest group-hover:border-orange">{{ secondary_text }}</div>

    <img class="block w-full object-cover" src="{{ image_src }}" height="256" alt="">
