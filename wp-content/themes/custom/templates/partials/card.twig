<a class="group block border-2 border-teal-darkest hover:border-orange hover:bg-orange-lightest no-underline" href="{{ link }}">
  <div class="px-3 py-2 bg-teal-darkest text-white font-bold text-2xl group-hover:bg-orange">{{ title }}</div>

  <div class="px-3 py-2 small-caps border-b-2 border-teal-darkest group-hover:border-orange">{{ primary_text }}</div>

  <div class="px-3 py-2 small-caps">{{ secondary_text }}</div>

  {% if image_src %}
    <img class="block w-full object-cover border-t-2 border-teal-darkest group-hover:border-orange" src="{{ image_src }}" height="320" alt="">
  {% endif %}
</a>
