            <img class="block w-full h-full object-cover border-1 border-orange rounded-full bg-orange-lightest" src="{{ image_src }}" height="320" alt="">
          </div>
        </div>
      </div>
    {% endif %}

    <div class="wysiwyg p-3 text-orange">
      {{ content }}
    </div>
</div>
