<div class="py-5 bg-teal-lightest">
  <div class="container flex justify-center">
    <div class="mt-4">
      <a id="calendar-previous-month-link" class="text-4xl" href="#">
        <span class="text-orange" data-pictogram="<"></span>
      </a>
    </div>

    <div>
      <div id="calendar-title" class="mb-3 mr-5">
        {% include "components/headline.twig" with { text: "Calendar for " ~ selected_date_string } %}
      </div>

      <div class="lg:flex mb-3 text-orange">
        <div class="flex lg:w-1/3 lg:mr-4 mb-2 lg:mb-0">
          <span class="mr-2" data-pictogram=","></span>

          <label class="relative flex w-full">
            <span class="absolute pin-r pointer-events-none" data-pictogram="/"></span>

            <select class="calendar-filter appearance-none w-full p-2 pr-4 border-1 border-orange rounded-none bg-white text-orange font-bold" data-param="location">
              <option value="-1">All Locations</option>

              {% for location in locations %}
                <option value="{{ location.id }}">{{ location.name }}</option>
              {% endfor %}
            </select>
          </label>
        </div>

        <div class="flex lg:w-1/3 lg:mr-4 mb-2 lg:mb-0">
          <span class="mr-2" data-pictogram="Ã©"></span>

          <label class="relative flex w-full">
            <span class="absolute pin-r pointer-events-none" data-pictogram="/"></span>

            <select class="calendar-filter appearance-none w-full p-2 pr-4 border-1 border-orange rounded-none bg-white text-orange font-bold" data-param="eventType">
              <option value="-1">All Event Types</option>

              {% for event_type in event_types %}
                <option value="{{ event_type.id }}">{{ event_type.name }}</option>
              {% endfor %}
            </select>
          </label>
        </div>

        <div class="flex lg:w-1/3 mb-2 lg:mb-0">
          <span class="mr-2" data-pictogram="("></span>

          <label class="relative flex w-full">
            <select class="calendar-filter appearance-none w-full p-2 pr-4 border-1 border-orange rounded-none bg-white text-orange font-bold" data-param="tool">
              <option value="-1">All Tools</option>

              {% for tool in tools %}
                <option value="{{ tool.id }}">{{ tool.name }}</option>
              {% endfor %}
            </select>

            <span class="absolute pin-r pointer-events-none" data-pictogram="/"></span>
          </label>
        </div>
      </div>

      <div id="fullcalendar"></div>
    </div>

    <div class="mt-4">
      <a id="calendar-next-month-link" class="block text-4xl" href="#">
        <span class="text-orange" data-pictogram=">"></span>
      </a>
    </div>
  </div>
</div>

<div id="calendar-tooltip"></div>
