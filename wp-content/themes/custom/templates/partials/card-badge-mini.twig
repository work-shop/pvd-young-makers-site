<div>
  <div class="flex flex-col h-6.5">
    <div class="flex justify-between items-center p-3 border-b-1 border-teal-darkest bg-teal-darkest text-white font-bold text-2xl leading-tight">
      {{ title }}
    </div>

    <div class="h-full px-3 py-2 bg-orange text-white small-caps">
      <div class="flex items-center">
        {% if primary_pictogram %}
          <span class="mr-2" data-pictogram="{{ primary_pictogram }}"></span>
        {% endif %}

        <span>{{ primary_text }}</span>
      </div>
    </div>
  </div>

  {% if image_src %}
    <div class="relative aspect-ratio-square -mt-5.5">
      <div class="absolute pin m-4">
        <img class="block w-full h-full object-cover border-1 border-orange rounded-full bg-orange-lightest" src="{{ image_src }}" height="320" alt="">
      </div>
    </div>
  {% endif %}
</div>
