<section class="{{ section_classes }}">
	<div class="container py-5">
		{% if block("title") is not empty %}
			<h2 class="font-bold text-3xl text-orange">
				{% block title %}{% endblock %}
			</h2>
		{% endif %}

		{% if block("text") is not empty %}
			<div class="wysiwyg max-w-lg mt-3 text-lg">
				{% block text %}{% endblock %}
			</div>
		{% endif %}

		{% if block("extra") is not empty %}
			<div class="mt-5">
				{% block extra %}{% endblock %}
			</div>
		{% endif %}
	</div>
</section>
