<div class="group">
  <h3 class="inline-block p-3 bg-orange text-white font-bold text-2xl leading-tight">
    {{ title }}
  </h3>

  <div class="border-1 border-orange bg-white">
    {% if image_src %}
      <img class="block w-full h-full object-cover" src="{{ image_src }}" height="320" alt="">
    {% endif %}

    {% if text %}
      <div class="wysiwyg m-4">
        {{ text }}
      </div>
    {% endif %}

    {% if link %}
      <div class="m-4">
        <a class="Block Block--light" href="{{ link }}">See {{ title }}</a>
      </div>
    {% endif %}
  </div>
</div>
