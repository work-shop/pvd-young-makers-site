{% extends "page.twig" %}

{% block page_content %}
  {% embed "partials/section.twig" %}
    {% block text %}
      <dl>
        {% for item in post.get_field("questions_questions") %}
          <dt class="font-bold">{{ item.question }}</dt>
          <dd class="mb-3">{{ item.answer }}</dd>
        {% endfor %}
      </dl>
    {% endblock %}
  {% endembed %}

  {% embed "partials/section.twig" %}
    {% block title %}
      Ask Us a Question
    {% endblock %}

    {% block text %}
      {{ function("gravity_form", "FAQ Form", false, false, false, "", false) }}
    {% endblock %}
  {% endembed %}
{% endblock %}
